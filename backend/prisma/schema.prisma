// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Products {
    uid              Int                @id @default(autoincrement())
    name             String
    description      String
    productInstances ProductInstances[]
}

model ProductInstances {
    id                  Int         @id @default(autoincrement())
    productId           Int         // Foreign key referencing Products
    currentOwner        Int         // Foreign key referencing Entity
    previousOwner       Int
    price               Float       @default(0)
    manufacturerId      Int
    distributorId       Int?
    retailerId          Int?
    customerId          Int?
    productLocation     Int         @default(0)
    productState        Int         @default(0)
    owner               Entity      @relation(fields: [currentOwner], references: [id])
    product             Products    @relation(fields: [productId], references: [uid])
}

model Entity {
    id               Int                @id @default(autoincrement())
    name             String
    surname          String?
    email            String
    password         String
    address_1        String
    address_2        String?
    companyName      String?
    shopName         String?
    metamaskAddress  String             @unique
    role             Roles
    verification     Verifications?
    ProductInstances ProductInstances[]

    @@unique([email])
}

model Verifications {
    id                 Int          @id @default(autoincrement())
    entityId           Int          @unique
    verificationId     String
    accountVerified    Boolean      @default(false)
    verificationPaid   Boolean      @default(false)
    entity             Entity       @relation(fields: [entityId], references: [id])
}

enum Roles {
    admin
    manufacturer
    distributor
    retailer
    customer
}
